<%= render 'shared/navbar' %>
<div class="min-h-screen bg-white-900 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white-800 rounded-lg shadow-lg overflow-hidden">
      <div class="p-8">
        <div class="flex items-center justify-between mb-6">
          <div>
            <h1 class="text-3xl font-bold text-black mb-2"><%= @todo.name %></h1>
            <div class="flex items-center space-x-4">
              <% if @todo.completed %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-900 text-green-400">
                  <svg class="mr-1.5 h-2 w-2 text-green-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  Completed
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-900 text-yellow-400">
                  <svg class="mr-1.5 h-2 w-2 text-yellow-400" fill="currentColor" viewBox="0 0 8 8">
                    <circle cx="4" cy="4" r="3" />
                  </svg>
                  In Progress
                </span>
              <% end %>
              <% if @todo.priority && @todo.priority > 0 %>
                <% priority_colors = {
                  1 => ["yellow-900", "yellow-400"],
                  2 => ["orange-900", "orange-400"],
                  3 => ["red-900", "red-400"],
                  4 => ["purple-900", "purple-400"],
                  5 => ["pink-900", "pink-400"]
                } %>
                <% bg_color, text_color = priority_colors[@todo.priority] || ["yellow-900", "yellow-400"] %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-<%= bg_color %> text-<%= text_color %>">
                  Priority <%= @todo.priority %>
                </span>
              <% end %>
            </div>
          </div>
          <%= link_to edit_todo_path(@todo), class: "inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium border border-gray-300 text-black bg-white-600 focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-150" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            Edit Task
          <% end %>
        </div>
        <div class="mt-6 bg-white-700 rounded-lg p-6">
          <div class="prose prose-lg text-black-200">
            <p><%= @todo.description %></p>
          </div>
        </div>
        <!-- Footer Actions -->
        <div class="mt-8 flex items-center justify-between">
          <div class="flex space-x-4">
            <%= link_to "javascript:history.back()", class: "inline-flex items-center px-4 py-2 border border-white-600 shadow-sm text-sm font-medium rounded-md text-black-200 bg-white-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-indigo-500" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5 text-black" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
              Back
            <% end %>
          </div>
          <%= button_to @todo,
              method: :delete,
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-red-500 transition-colors duration-150",
              data: { confirm: "Are you sure you want to delete this task? This action cannot be undone." } do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Delete Task
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
