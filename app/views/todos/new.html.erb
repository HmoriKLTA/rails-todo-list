<%= render 'shared/navbar' %>
<% content_for :title, "New todo" %>
<div class="min-h-screen bg-gray-50 py-8 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <div class="bg-white rounded-lg shadow-sm overflow-hidden">
      <div class="p-8">
        <div class="max-w-2xl">
          <div class="flex items-center justify-between mb-8">
            <div>
              <h1 class="text-3xl font-bold text-gray-900">New Task</h1>
              <p class="mt-2 text-sm text-gray-600">
                Create a new task to organize your tasks and track your progress.
              </p>
            </div>
            <%= link_to projects_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
              <svg class="mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
              </svg>
              Back to Projects
            <% end %>
          </div>
          <div class="bg-gray-50 rounded-lg border border-gray-200 p-6">
            <%= render "form", todo: @todo, submit_text: "Create Task" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
